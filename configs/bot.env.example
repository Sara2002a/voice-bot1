# ATTENTION: when starting a project in production mode, change these parameters

# mode can be production or development
mode=production

# debug can be True or False
# if mode=production debug will ALWAYS be False
debug=False

# telegram_base_url may be empty
telegram_token=
telegram_base_url=

# —Åhat to save voice messages
voice_chat=

# webhooks settings
# domain name(or ip) of the server where the bot is deployed
# if host is empty polling will be started
host=

# url to connect to postgres database
# example https://docs.sqlalchemy.org/en/14/core/engines.html
# why postgresql and not postgres:
# https://stackoverflow.com/questions/62688256/sqlalchemy-exc-nosuchmoduleerror-cant-load-plugin-sqlalchemy-dialectspostgre
db_url=postgresql://bot:bot_secret@db:5432
